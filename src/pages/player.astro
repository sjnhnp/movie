          document.addEventListener('DOMContentLoaded', () => {
            const header = document.getElementById('cinematic-header-wrapper');
            const panelToggle = document.getElementById('master-control-toggle');
            const panel = document.getElementById('master-control-panel');
            const playerRegion = document.getElementById('player-region');

            // 显隐逻辑更新
            let hideTimeout = null;
            const showHeader = () => {
              if (hideTimeout) clearTimeout(hideTimeout);
              header.classList.add('active');
            };
            const hideHeader = () => {
              if (hideTimeout) clearTimeout(hideTimeout);
              // 如果面板是打开的，绝对不要自动隐藏，除非手动关闭或点击外部
              if (panel.classList.contains('active')) return;

              hideTimeout = setTimeout(() => {
                header.classList.remove('active');
              }, 300); // 增加小缓冲
            };

            // 监听视频区域
            playerRegion.addEventListener('mousemove', showHeader);
            playerRegion.addEventListener('mouseleave', hideHeader);

            // 顶栏自身悬停保持
            header.addEventListener('mouseenter', showHeader);
            header.addEventListener('mouseleave', hideHeader);

            // 面板自身悬停也保持显示，防止“缝隙”导致意外消失
            panel.addEventListener('mouseenter', showHeader);
            panel.addEventListener('mouseleave', hideHeader);

            // 控制中心面板切换
            panelToggle.addEventListener('click', (e) => {
              e.stopPropagation();

              // 检查是否有二级菜单打开
              const anySubMenuOpen = !!document.querySelector(
                '.control-center-anchor .control-dropdown:not(.hidden)'
              );

              if (anySubMenuOpen) {
                // 如果有子菜单打开，关闭所有子菜单，重新显示主面板
                if (typeof closeAllDropdowns === 'function') {
                  closeAllDropdowns();
                }
                // 确保主面板此时是 active 状态
                panel.classList.add('active');
                panelToggle.classList.add('active');
                return;
              }

              const isNowActive = panel.classList.toggle('active');
              panelToggle.classList.toggle('active', isNowActive);
            });

            // 点击外部关闭: 增加对二级菜单及其容器的检测
            document.addEventListener('click', (e) => {
              const anchor = document.querySelector('.control-center-anchor');
              if (
                panel &&
                panel.classList.contains('active') &&
                anchor &&
                !anchor.contains(e.target)
              ) {
                panel.classList.remove('active');
                panelToggle.classList.remove('active');

                // 关键修复：点击外部时，同时清空并关闭所有二级菜单
                if (typeof closeAllDropdowns === 'function') {
                  closeAllDropdowns();
                }

                // 如果鼠标不在区域内，关闭面板后立即随之隐藏顶栏
                if (!playerRegion.matches(':hover') && !header.matches(':hover')) {
                  header.classList.remove('active');
                }
              }
            });
          });
        </script>
