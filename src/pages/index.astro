---
import Layout from '../layouts/Layout.astro';
import { createHash } from 'crypto';

const password = import.meta.env.PASSWORD || '';
const settingsPassword = import.meta.env.SETTINGS_PASSWORD || '';

const sha256 = (str: string) => createHash('sha256').update(str).digest('hex');
const passwordHash = password ? sha256(password) : '';
const settingsPasswordHash = settingsPassword ? sha256(settingsPassword) : '';
---

<Layout title="X">
  <!-- 注入服务端环境变量到客户端 -->
  <script is:inline define:vars={{ passwordHash, settingsPasswordHash }}>
    window.__ENV__ = window.__ENV__ || {};
    window.__ENV__.PASSWORD = passwordHash;
    window.__ENV__.SETTINGS_PASSWORD = settingsPasswordHash;
  </script>

  <!-- 顶部功能按钮区：设置 -->
  <nav aria-label="设置功能" class="fixed top-6 right-6 z-10">
    <div class="flex items-center space-x-3">
      <button
        id="settingsButton"
        class="bg-white/10 hover:bg-white/20 backdrop-blur-md border border-white/20 hover:border-white/40 rounded-xl px-4 py-2.5 flex items-center gap-2 transition-all duration-300 text-white/90 hover:text-white shadow-lg hover:shadow-xl"
        aria-label="打开设置"
        type="button"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
          >
          </path>
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span class="hidden sm:inline">设置</span>
      </button>
    </div>
  </nav>

  <!-- 顶部功能按钮区：历史 -->
  <nav aria-label="主要功能" class="fixed top-6 left-6 z-10">
    <button
      id="historyButton"
      class="bg-white/10 hover:bg-white/20 backdrop-blur-md border border-white/20 hover:border-white/40 rounded-xl px-4 py-2.5 flex items-center gap-2 transition-all duration-300 text-white/90 hover:text-white shadow-lg hover:shadow-xl"
      aria-label="观看历史"
      type="button"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span class="hidden sm:inline font-medium">历史</span>
    </button>
  </nav>

  <!-- 历史记录面板 -->
  <!-- 历史记录面板 -->
  <aside
    id="historyPanel"
    class="history-panel p-6"
    aria-label="观看历史"
    aria-hidden="true"
    tabindex="-1"
  >
    <div class="flex justify-between items-center mb-8">
      <h3 class="text-2xl font-bold gradient-text">观看历史</h3>
      <button
        id="closeHistoryPanelButton"
        class="text-white/60 hover:text-white bg-white/10 hover:bg-white/20 rounded-xl p-2 transition-all duration-300"
        aria-label="关闭历史"
        type="button"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"
          >
          </path>
        </svg>
      </button>
    </div>
    <div id="historyList" class="pb-4" role="region" aria-live="polite">
      <div class="text-center text-white/60 py-12">
        <svg
          class="w-16 h-16 mx-auto mb-4 text-white/30"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <p class="text-lg font-medium">暂无观看记录</p>
        <p class="text-sm text-white/40 mt-2">开始观看视频后，历史记录会显示在这里</p>
      </div>
    </div>
    <div class="mt-4 text-center sticky bottom-0 pb-2 pt-2">
      <button
        onclick="clearViewingHistory()"
        class="clear-history-btn w-full transition-all duration-300"
        type="button"
      >
        清空历史记录
      </button>
    </div>
  </aside>

  <!-- 设置面板 -->
  <aside
    id="settingsPanel"
    class="settings-panel fixed right-0 top-0 h-full w-80 bg-black/20 backdrop-blur-xl border-l border-white/10 p-6 z-40 overflow-y-auto"
    aria-label="设置面板"
    tabindex="-1"
  >
    <div class="flex justify-between items-center mb-8">
      <h3 class="text-2xl font-bold gradient-text">设置</h3>
      <button
        id="closeSettingsPanelButton"
        class="text-white/60 hover:text-white bg-white/10 hover:bg-white/20 rounded-xl p-2 transition-all duration-300"
        aria-label="关闭设置"
        type="button"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"
          >
          </path>
        </svg>
      </button>
    </div>

    <div class="space-y-6">
      <!-- 数据源区域 -->
      <section
        class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-5 shadow-lg"
        aria-label="数据源设置"
      >
        <label class="block text-lg font-semibold text-white/90 mb-4 pb-2 border-b border-white/10">
          数据源设置
        </label>

        <!-- 批量操作按钮 -->
        <div class="flex justify-between gap-3 mb-4">
          <button
            onclick="selectAllAPIs(true)"
            class="flex-1 text-center px-3 py-1.5 bg-linear-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 text-white text-sm rounded-lg font-medium transition-all duration-300"
            type="button">全选</button
          >
          <button
            onclick="selectAllAPIs(false)"
            class="flex-1 text-center px-3 py-1.5 bg-white/10 hover:bg-white/20 border border-white/20 hover:border-white/40 text-white/90 hover:text-white text-sm rounded-lg font-medium transition-all duration-300"
            type="button">全不选</button
          >
        </div>

        <!-- API选择区域 -->
        <div
          class="max-h-48 overflow-y-auto bg-white/5 backdrop-blur-sm border border-white/10 p-3 rounded-xl mb-4"
        >
          <div
            id="apiCheckboxes"
            class="grid grid-cols-2 gap-3"
            role="group"
            aria-label="API选择列表"
          >
          </div>
        </div>

        <div
          class="text-sm text-white/60 flex justify-between items-center bg-white/5 rounded-lg p-3"
        >
          <span
            >已选API数量：<span id="selectedApiCount" class="text-white font-medium">0</span></span
          >
          <span id="siteStatus"></span>
        </div>
      </section>

      <!-- 自定义API管理 -->
      <section
        class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-5 shadow-lg"
        aria-label="自定义API"
      >
        <div class="flex justify-between items-center mb-4">
          <label
            class="block text-lg font-semibold text-white/90 pb-2 border-b border-white/10 w-full"
          >
            自定义API
          </label>
          <button
            onclick="showAddCustomApiForm()"
            class="bg-linear-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 text-white w-8 h-8 rounded-xl flex items-center justify-center text-lg font-bold ml-3 transition-all duration-300 shadow-lg"
            aria-label="添加自定义API"
            type="button">+</button
          >
        </div>
        <div id="customApisList" class="max-h-40 overflow-y-auto mb-4"></div>
        <div
          id="addCustomApiForm"
          class="hidden mt-4 p-4 bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl"
        >
          <input
            type="text"
            id="customApiName"
            placeholder="API名称"
            class="w-full bg-white/10 border border-white/20 text-white px-4 py-3 rounded-lg mb-3 focus:outline-none focus:border-white/40 transition-all duration-300"
            autocomplete="off"
          />
          <input
            type="text"
            id="customApiUrl"
            placeholder="https://abc.com"
            class="w-full bg-white/10 border border-white/20 text-white px-4 py-3 rounded-lg mb-3 focus:outline-none focus:border-white/40 transition-all duration-300"
            autocomplete="off"
          />
          <input
            type="text"
            id="customApiDetail"
            placeholder="detail地址(可选,特殊源)"
            class="w-full bg-white/10 border border-white/20 text-white px-4 py-3 rounded-lg mb-3 focus:outline-none focus:border-white/40 transition-all duration-300"
            autocomplete="off"
          />
          <div class="flex items-center mb-4">
            <input
              type="checkbox"
              id="customApiIsAdult"
              class="form-checkbox h-5 w-5 text-purple-500 bg-white/10 border border-white/20 rounded"
            />
            <label for="customApiIsAdult" class="ml-3 text-sm text-purple-400 font-medium"
              >黄色资源站</label
            >
          </div>
          <div class="flex gap-3">
            <button
              onclick="addCustomApi()"
              class="flex-1 bg-linear-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-all duration-300"
              type="button">添加</button
            >
            <button
              onclick="cancelAddCustomApi()"
              class="flex-1 bg-white/10 hover:bg-white/20 border border-white/20 hover:border-white/40 text-white/90 hover:text-white px-4 py-2 rounded-lg text-sm font-medium transition-all duration-300"
              type="button">取消</button
            >
          </div>
        </div>
      </section>

      <!-- 内容过滤及功能区 -->
      <section
        class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-5 shadow-lg"
        aria-label="功能开关"
      >
        <label class="block text-lg font-semibold text-white/90 mb-4 pb-2 border-b border-white/10">
          功能开关
        </label>

        <!-- 滤黄开关 -->
        <div class="bg-white/5 rounded-xl p-4 mb-4">
          <div class="flex items-center justify-between">
            <div>
              <label for="yellowFilterToggle" class="text-sm font-medium text-white/90">
                黄色内容过滤
              </label>
              <p class="text-xs text-white/60 mt-1">过滤"伦理片"等黄色内容</p>
            </div>
            <div class="relative inline-block w-12 align-middle select-none">
              <input
                type="checkbox"
                id="yellowFilterToggle"
                class="opacity-0 absolute w-full h-full cursor-pointer z-10"
                aria-checked="false"
                role="switch"
                aria-labelledby="yellowFilterLabel"
              />
              <div
                class="toggle-bg bg-white/20 w-12 h-6 rounded-full transition-all duration-300 ease-in-out"
              >
              </div>
              <div
                class="toggle-dot absolute w-5 h-5 bg-white rounded-full top-0.5 left-0.5 transition-all duration-300 ease-in-out shadow-lg"
              >
              </div>
            </div>
          </div>
        </div>

        <!-- 广告过滤 -->
        <div class="bg-white/5 rounded-xl p-4 mb-4">
          <div class="flex items-center justify-between">
            <div>
              <label for="adFilterToggle" class="text-sm font-medium text-white/90">
                分片广告过滤
              </label>
              <p class="text-xs text-white/60 mt-1">关闭可解决部分资源卡住</p>
            </div>
            <div class="relative inline-block w-12 align-middle select-none">
              <input
                type="checkbox"
                id="adFilterToggle"
                class="opacity-0 absolute w-full h-full cursor-pointer z-10"
                aria-checked="false"
              />
              <div
                class="toggle-bg bg-white/20 w-12 h-6 rounded-full transition-all duration-300 ease-in-out"
              >
              </div>
              <div
                class="toggle-dot absolute w-5 h-5 bg-white rounded-full top-0.5 left-0.5 transition-all duration-300 ease-in-out shadow-lg"
              >
              </div>
            </div>
          </div>
        </div>

        <!-- 豆瓣推荐 -->
        <div class="bg-white/5 rounded-xl p-4 mb-4">
          <div class="flex items-center justify-between">
            <div>
              <label for="doubanToggle" class="text-sm font-medium text-white/90">
                豆瓣热门推荐
              </label>
              <p class="text-xs text-white/60 mt-1">首页显示豆瓣热门影视内容</p>
            </div>
            <div class="relative inline-block w-12 align-middle select-none">
              <input
                type="checkbox"
                id="doubanToggle"
                class="opacity-0 absolute w-full h-full cursor-pointer z-10"
                aria-checked="false"
              />
              <div
                class="toggle-bg bg-white/20 w-12 h-6 rounded-full transition-all duration-300 ease-in-out"
              >
              </div>
              <div
                class="toggle-dot absolute w-5 h-5 bg-white rounded-full top-0.5 left-0.5 transition-all duration-300 ease-in-out shadow-lg"
              >
              </div>
            </div>
          </div>
        </div>

        <!-- 画质速度检测 -->
        <div class="bg-white/5 rounded-xl p-4 mb-4">
          <div class="flex items-center justify-between">
            <div>
              <label for="speedDetectionToggle" class="text-sm font-medium text-white/90">
                画质速度检测
              </label>
              <p class="text-xs text-white/60 mt-1">缓存立即显示搜索结果</p>
            </div>
            <div class="relative inline-block w-12 align-middle select-none">
              <input
                type="checkbox"
                id="speedDetectionToggle"
                class="opacity-0 absolute w-full h-full cursor-pointer z-10"
                aria-checked="false"
              />
              <div
                class="toggle-bg bg-white/20 w-12 h-6 rounded-full transition-all duration-300 ease-in-out"
              >
              </div>
              <div
                class="toggle-dot absolute w-5 h-5 bg-white rounded-full top-0.5 left-0.5 transition-all duration-300 ease-in-out shadow-lg"
              >
              </div>
            </div>
          </div>
        </div>

        <!-- 播放预加载 -->
        <div class="bg-white/5 rounded-xl p-4">
          <div class="flex items-center justify-between">
            <div>
              <label for="preloadingToggle" class="text-sm font-medium text-white/90">
                播放预加载
              </label>
              <p class="text-xs text-white/60 mt-1">自动预加载集数</p>
            </div>
            <div class="flex items-center gap-3">
              <label class="switch" style="margin-bottom:0;">
                <input type="checkbox" id="preloadingToggle" />
                <span class="slider"></span>
              </label>
              <input
                type="number"
                min="1"
                max="10"
                step="1"
                id="preloadCountInput"
                class="w-16 bg-white/10 border border-white/20 text-white px-2 py-1 rounded-lg text-sm text-center focus:outline-none focus:border-white/40 transition-all duration-300"
                title="预加载范围1-10"
                aria-label="预加载集数"
              />
            </div>
          </div>
        </div>
      </section>
    </div>
  </aside>

  <!-- 主内容区 -->
  <main class="container mx-auto px-4 py-8 flex flex-col h-screen justify-center" role="main">
    <div class="flex-1 flex flex-col">
      <!-- 标题部分 -->
      <header class="text-center mb-8" role="banner">
        <div class="flex justify-center items-center mb-6">
          <a
            href="#"
            onclick="resetToHome(); return false;"
            class="flex items-center group"
            aria-label="返回首页"
          >
            <div class="relative">
              <div
                class="absolute inset-0 bg-linear-to-r from-indigo-500 to-purple-600 rounded-2xl blur-lg opacity-30 group-hover:opacity-50 transition-opacity duration-300"
              >
              </div>
              <div
                class="relative bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-4 group-hover:border-white/20 transition-all duration-300"
              >
                <svg
                  class="w-12 h-12 text-white/90"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"
                  >
                  </path>
                </svg>
              </div>
            </div>
            <h1 class="text-6xl font-bold gradient-text ml-4 tracking-tight">X</h1>
          </a>
        </div>
        <p class="text-white/60 text-lg font-light mb-12">
          若卡住 关闭去广告<br />搜索结果 按速度排序
        </p>
      </header>
      <!-- 搜索区 -->
      <section id="searchArea" class="flex flex-col items-center" aria-label="搜索区">
        <div class="w-full max-w-3xl">
          <form id="searchForm" class="relative group z-10">
            <!-- 1. 动态对流光晕背景 (Glow Effect) -->
            <div
              class="absolute -inset-1 bg-linear-to-r from-indigo-500 via-purple-500 to-indigo-500 rounded-2xl blur-xl opacity-30 group-hover:opacity-60 group-focus-within:opacity-80 transition-all duration-700 animate-pulse-slow"
              aria-hidden="true"
            >
            </div>

            <!-- 2. 主容器 (Glass Container) -->
            <div
              class="relative flex items-stretch h-16 bg-white/5 backdrop-blur-2xl border border-white/10 rounded-2xl overflow-hidden shadow-2xl transition-all duration-300 group-hover:bg-white/10 group-focus-within:border-indigo-500/50 group-focus-within:bg-black/40 group-focus-within:ring-1 group-focus-within:ring-indigo-500/50"
            >
              <!-- 首页按钮 -->
              <button
                id="homeButton"
                type="button"
                onclick="resetToHome()"
                class="px-5 md:px-6 flex items-center justify-center text-white/70 hover:text-white hover:bg-white/5 border-r border-white/5 transition-all duration-300 group-focus-within:text-indigo-400"
                aria-label="返回首页"
                title="返回首页"
              >
                <svg
                  class="w-5 h-5 mr-0 md:mr-2 transition-transform group-hover:scale-110"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                  >
                  </path>
                </svg>
                <span class="hidden md:inline font-medium">首页</span>
              </button>

              <!-- 输入框 -->
              <input
                type="text"
                id="searchInput"
                class="flex-1 bg-transparent text-white px-4 md:px-6 py-0 focus:outline-none placeholder-white/30 text-lg transition-all"
                placeholder="搜索你想看的影视内容..."
                autocomplete="off"
                aria-label="视频搜索框"
              />

              <!-- 搜索按钮 -->
              <button
                type="submit"
                class="px-6 md:px-8 flex items-center justify-center bg-white/5 hover:bg-white/10 text-white font-medium transition-all duration-300 hover:text-indigo-400 active:scale-95"
                aria-label="搜索按钮"
              >
                <svg
                  class="w-6 h-6 mr-0 md:mr-2 transform transition-transform group-hover:rotate-12"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                <span class="hidden md:inline text-lg">搜索</span>
              </button>
            </div>
          </form>

          <!-- 搜索历史标签 -->
          <div
            id="recentSearches"
            class="mt-6 flex flex-wrap gap-3 justify-center"
            aria-label="最近搜索记录"
            aria-live="polite"
          >
          </div>

          <div id="searchFeedbackArea" class="w-full text-center mt-8 hidden"></div>
        </div>
      </section>
      <!-- 搜索结果 -->
      <section id="resultsArea" class="w-full hidden" aria-label="搜索结果">
        <div class="mx-auto max-w-7xl px-2">
          <div class="flex justify-end items-center mb-4">
            <div class="text-sm text-gray-400">
              <span id="searchResultsCount">0</span> 个结果
            </div>
          </div>
          <div id="searchResults" role="region" aria-live="polite"></div>
        </div>
      </section>

      <!-- 豆瓣热门区 -->
      <section id="doubanArea" class="w-full my-8 hidden" aria-label="豆瓣热门">
        <div class="mx-auto max-w-7xl px-2">
          <div class="mb-4">
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center">
                <h2 class="text-xl font-bold text-white mr-4">豆瓣热门</h2>
                <div
                  class="flex items-center bg-[#222] rounded-full p-1"
                  role="group"
                  aria-label="热门切换"
                >
                  <button
                    id="douban-movie-toggle"
                    class="px-3 py-1 text-sm rounded-full bg-pink-600 text-white"
                    type="button">电影</button
                  >
                  <button
                    id="douban-tv-toggle"
                    class="px-3 py-1 text-sm rounded-full text-gray-300 hover:text-white"
                    type="button">电视剧</button
                  >
                </div>
              </div>
              <button
                id="douban-refresh"
                class="text-sm px-3 py-1 bg-pink-600 hover:bg-pink-700 text-white rounded-lg flex items-center gap-1"
                aria-label="换一批热门"
                type="button"
              >
                <span>换一批</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-4 w-4"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
                  ></path>
                </svg>
              </button>
            </div>
            <div class="overflow-x-auto pb-2">
              <div
                id="douban-tags"
                class="flex space-x-2 min-w-max"
                role="tablist"
                aria-label="豆瓣分类标签"
              >
              </div>
            </div>
          </div>
          <div
            id="douban-results"
            class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 xl:grid-cols-8 gap-3"
            role="region"
            aria-live="polite"
          >
          </div>
        </div>
      </section>
    </div>

    <!-- 详情模态框 -->
    <div
      id="modal"
      class="fixed inset-0 bg-black/60 backdrop-blur-md hidden flex items-center justify-center transition-all duration-300 z-50 p-4"
      role="dialog"
      aria-modal="true"
      aria-labelledby="modalTitle"
      aria-hidden="true"
      tabindex="-1"
    >
      <div
        class="bg-[#1a1a2e]/90 backdrop-blur-2xl border border-white/10 rounded-3xl w-full max-w-4xl max-h-[90vh] flex flex-col shadow-[0_0_50px_rgba(0,0,0,0.5)] overflow-hidden"
      >
        <div class="flex justify-between items-center p-6 border-b border-white/10 flex-none">
          <h2 id="modalTitle" class="text-2xl md:text-3xl font-bold gradient-text truncate pr-4">
          </h2>
          <button
            id="closeModalButton"
            class="text-white/60 hover:text-white bg-white/10 hover:bg-white/20 rounded-2xl p-2.5 transition-all duration-300 shrink-0"
            aria-label="关闭详情"
            type="button"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <div id="modalContent" class="overflow-y-auto flex-1 p-6 md:p-8 custom-scrollbar"></div>
      </div>
    </div>

    <!-- 密码验证弹窗 -->
    <div
      id="passwordModal"
      class="fixed inset-0 bg-black/80 backdrop-blur-sm hidden items-center justify-center z-65 transition-opacity duration-300"
      role="dialog"
      aria-modal="true"
      aria-labelledby="passwordModalTitle"
      aria-hidden="true"
      tabindex="-1"
    >
      <div
        class="bg-black/20 backdrop-blur-xl border border-white/10 p-8 rounded-2xl w-11/12 max-w-md max-h-[90vh] flex flex-col shadow-2xl"
      >
        <div class="flex justify-between items-center mb-8 flex-none">
          <h2 id="passwordModalTitle" class="text-2xl font-bold gradient-text">访问验证</h2>
          <button
            id="closePasswordModalButton"
            class="text-white/60 hover:text-white bg-white/10 hover:bg-white/20 rounded-xl p-2 transition-all duration-300 shrink-0 hidden"
            aria-label="关闭验证"
            type="button"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"
              >
              </path>
            </svg>
          </button>
        </div>
        <div class="mb-6">
          <p class="text-white/80 mb-6 text-center">请输入密码继续访问</p>
          <form
            id="passwordForm"
            onsubmit="handlePasswordSubmit(); return false;"
            autocomplete="off"
          >
            <input
              type="text"
              name="username"
              id="username"
              autocomplete="username"
              style="display:none"
              tabindex="-1"
              aria-hidden="true"
            />
            <input
              type="password"
              id="passwordInput"
              class="w-full bg-white/10 border border-white/20 text-white px-4 py-3 rounded-xl focus:outline-none focus:border-white/40 transition-all duration-300 mb-4"
              placeholder="请输入密码..."
              autocomplete="new-password"
            />
            <button
              id="passwordSubmitBtn"
              class="w-full bg-linear-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 text-white px-4 py-3 rounded-xl font-medium transition-all duration-300 shadow-lg"
              type="submit">验证</button
            >
          </form>
          <p id="passwordError" class="text-red-400 mt-3 text-center hidden" role="alert">
            密码错误，请重试
          </p>
        </div>
      </div>
    </div>

    <!-- 弹窗提示 -->
    <div
      id="toast"
      class="fixed top-6 left-1/2 -translate-x-1/2 bg-black/20 backdrop-blur-xl border border-white/10 text-white px-6 py-4 rounded-2xl shadow-2xl transform transition-all duration-300 opacity-0 -translate-y-full z-50"
      role="alertdialog"
      aria-live="assertive"
      aria-atomic="true"
      aria-hidden="true"
      tabindex="-1"
    >
      <p id="toastMessage"></p>
    </div>

    <!-- 加载提示 -->
    <div
      id="loading"
      class="fixed inset-0 bg-black/80 backdrop-blur-sm hidden items-center justify-center z-50"
      role="status"
      aria-live="polite"
      aria-hidden="true"
      tabindex="-1"
    >
      <div
        class="bg-black/20 backdrop-blur-xl border border-white/10 p-8 rounded-2xl flex items-center space-x-4 shadow-2xl"
      >
        <div
          class="w-8 h-8 border-4 border-white/30 border-t-white rounded-full animate-spin"
          aria-label="加载中"
        >
        </div>
        <p class="text-white/90 text-lg font-medium">加载中...</p>
      </div>
    </div>

    <!-- 延迟加载主应用脚本（defer避免阻塞） -->
    <script is:inline src="/js/config.js" defer></script>
    <script is:inline src="/js/utils.js" defer></script>
    <script is:inline src="/js/simple_quality_detector.js" defer></script>
    <script is:inline src="/js/speed_tester.js" defer></script>
    <script is:inline src="/js/ui.js" defer></script>
    <script is:inline src="/js/api.js" defer></script>
    <script is:inline src="/js/api_source_manager.js" defer></script>
    <script is:inline src="/js/app.js" defer></script>
    <script is:inline src="/js/douban.js" defer></script>
    <script is:inline src="/js/password.js" defer></script>

    <!-- Templates -->
    <template id="search-result-template">
      <div
        class="card-hover group bg-white/5 backdrop-blur-md rounded-2xl overflow-hidden cursor-pointer transition-all duration-300 hover:scale-[1.02] h-full shadow-lg hover:shadow-indigo-500/20 border border-white/10 hover:border-indigo-500/50"
        data-id=""
        data-source-code=""
      >
        <div class="flex h-full">
          <div class="w-24 md:w-32 relative shrink-0 overflow-hidden">
            <img
              src="https://via.placeholder.com/100x150/191919/555555?text=No+Image"
              alt="视频封面"
              class="result-img h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
              onerror="this.onerror=null; this.src='https://via.placeholder.com/100x150/191919/555555?text=Error';"
            />
            <div class="absolute inset-0 bg-linear-to-r from-black/60 to-transparent"></div>
          </div>
          <div class="p-3 md:p-4 flex flex-col grow min-w-0">
            <div class="grow">
              <h3
                class="result-title font-bold text-sm md:text-base mb-2 wrap-break-word line-clamp-2 text-white/90 group-hover:text-indigo-400 transition-colors"
                title="视频标题"
              >
                视频标题
              </h3>
              <div class="result-meta flex flex-wrap items-center gap-2 mb-2">
                <span
                  class="result-type hidden text-[10px] uppercase tracking-wider py-1 px-2 rounded-lg bg-indigo-500/20 text-indigo-300 border border-indigo-500/20"
                  >类型</span
                >
                <span
                  class="result-year hidden text-[10px] uppercase tracking-wider py-1 px-2 rounded-lg bg-purple-500/20 text-purple-300 border border-purple-500/20"
                  >年份</span
                >
              </div>
              <p class="result-remarks hidden text-xs text-white/50 mb-2 line-clamp-1 italic">
                更新状态
              </p>
            </div>
            <div
              class="result-source flex justify-between items-center mt-auto pt-2 border-t border-white/5"
            >
              <span
                class="result-source-name text-[10px] text-white/30 uppercase tracking-widest font-bold"
                >数据源</span
              >
            </div>
          </div>
        </div>
      </div>
    </template>

    <template id="video-details-template">
      <div class="space-y-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-4">
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-white/5 rounded-2xl p-3 border border-white/5">
                <span class="block text-xs text-white/40 mb-1">类型</span>
                <span class="font-medium text-white/90" data-field="type">-</span>
              </div>
              <div class="bg-white/5 rounded-2xl p-3 border border-white/5">
                <span class="block text-xs text-white/40 mb-1">年份</span>
                <span class="font-medium text-white/90" data-field="year">-</span>
              </div>
              <div class="bg-white/5 rounded-2xl p-3 border border-white/5">
                <span class="block text-xs text-white/40 mb-1">地区</span>
                <span class="font-medium text-white/90" data-field="area">-</span>
              </div>
              <div class="bg-white/5 rounded-2xl p-3 border border-white/5">
                <span class="block text-xs text-white/40 mb-1">备注</span>
                <span class="font-medium text-purple-400" data-field="remarks">-</span>
              </div>
            </div>
            <div class="bg-white/5 rounded-2xl p-4 border border-white/5">
              <span class="block text-xs text-white/40 mb-2">导演</span>
              <span class="text-white/90" data-field="director">-</span>
            </div>
          </div>
          <div class="bg-white/5 rounded-2xl p-4 border border-white/5">
            <span class="block text-xs text-white/40 mb-2">主演</span>
            <p class="text-white/80 text-sm leading-relaxed line-clamp-4" data-field="actor">-</p>
          </div>
        </div>

        <div class="bg-white/5 rounded-2xl p-6 border border-white/5">
          <h4 class="text-lg font-bold text-white/90 mb-3 flex items-center gap-2">
            <span class="w-1.5 h-6 bg-indigo-500 rounded-full"></span>
            内容简介
          </h4>
          <p class="text-white/60 text-sm leading-relaxed" data-field="description">-</p>
        </div>

        <div data-field="episodesContainer" class="space-y-4">
          <div
            class="flex justify-between items-center bg-white/5 rounded-2xl p-4 border border-white/5"
          >
            <div class="flex items-center gap-3">
              <span class="text-sm font-medium text-white/60"
                >共 <span data-field="episode-count" class="text-white/90">0</span> 集</span
              >
              <span
                class="px-2.5 py-1 bg-indigo-500/20 text-indigo-300 text-xs font-bold rounded-lg border border-indigo-500/30"
                data-field="quality-tag">检测中...</span
              >
              <span
                class="px-2.5 py-1 bg-emerald-500/20 text-emerald-300 text-xs font-bold rounded-lg border border-emerald-500/30 hidden"
                data-field="speed-tag"></span>
            </div>
            <div class="flex items-center gap-2">
              <button
                data-action="copy-links"
                class="p-2.5 bg-white/10 hover:bg-white/20 text-white/80 hover:text-white rounded-xl transition-all duration-300 border border-white/10"
                title="复制链接"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"
                  ></path></svg
                >
              </button>
              <button
                data-action="toggle-order"
                class="p-2.5 bg-white/10 hover:bg-white/20 text-white/80 hover:text-white rounded-xl transition-all duration-300 border border-white/10"
                title="切换排序"
              >
                <svg
                  data-field="order-icon"
                  class="w-5 h-5 transition-transform duration-300"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"></path></svg
                >
              </button>
            </div>
          </div>
          <div
            data-field="episode-buttons-grid"
            class="grid grid-cols-3 xs:grid-cols-4 sm:grid-cols-6 md:grid-cols-8 gap-3 mt-4"
          >
          </div>
        </div>
      </div>
    </template>
  </main>
</Layout>
