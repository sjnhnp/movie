---
import '../styles/global.css';
import '../styles/player_styles.css';

import { createHash } from 'crypto';
// 优先从 runtime (process.env) 读取，适配 Docker/1Panel 等环境的运行时注入
// 只有在 Node 环境不可用时才回退到 build-time 的 import.meta.env
const password = String(
  (typeof process !== 'undefined' ? process.env.PASSWORD : undefined) ||
    import.meta.env.PASSWORD ||
    ''
);
const settingsPassword = String(
  (typeof process !== 'undefined' ? process.env.SETTINGS_PASSWORD : undefined) ||
    import.meta.env.SETTINGS_PASSWORD ||
    ''
);

const sha256 = (str: string) => (str ? createHash('sha256').update(str).digest('hex') : '');
const passwordHash = sha256(password);
const settingsPasswordHash = sha256(settingsPassword);
